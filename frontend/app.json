{
  "expo": {
    "name": "Namaz Vakitleri",
    "slug": "namaz-vakitleri",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "namazvakitleri",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.namazvakitleri.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Shows prayer times for your location",
        "NSLocationAlwaysUsageDescription": "Provides accurate prayer time notifications",
        "NSMotionUsageDescription": "Qibla compass requires motion sensors",
        "GADApplicationIdentifier": "ca-app-pub-7614997391820254~2717321696",
        "SKAdNetworkItems": [
          { "SKAdNetworkIdentifier": "cstr6suwn9.skadnetwork" }
        ]
      }
    },
    "android": {
      "package": "com.namazvakitleri.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0F0F1A"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM",
        "com.google.android.gms.permission.AD_ID"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-7614997391820254~2717321696",
          "iosAppId": "ca-app-pub-7614997391820254~2717321696"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
